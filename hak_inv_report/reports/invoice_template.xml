    <template id="report_inv_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article o_report_layout_standard" t-att-data-oe-model="doc and doc._name"
                     t-att-data-oe-id="doc and doc.id">
                    <t t-call="hak_inv_report.inv_report_header_footer"/>
                    <!--                <t t-call="web.external_layout">-->
                    <t t-set="o" t-value="o.with_context(lang=lang)" />
                    <!--                    <t t-set="company" t-value="res_company" />-->
                    <!--                <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/> &lt;!&ndash; So that it appears in the footer of the report instead of the company VAT if it's set &ndash;&gt;-->

                    <div class="mt-5">
                        <div class="page">
                            <table class="table table-bordered" style="border:2px solid black;">
                                <tr>
                                    <td style="border-right:1px solid white;">
                                        <div class="col-12" name="company_address" style="font-weight:bold;">
                                            <span t-if="res_company.company_details" t-esc="res_company.company_details"/>
                                            <span t-else="" t-esc="res_company.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                                        </div>
                                    </td>
                                    <td class="text-center" style="font-size:20px;border-right:1px solid white;">
                                        <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" style="max-height: 65px;" alt="Logo"/><br/><br/>
                                        <span ><strong>Tax Invoice</strong></span>
                                    </td>
                                    <td>
                                        <div class="col-12" name="company_address">
                                            <span t-if="res_company.company_details" t-esc="res_company.company_details"/>
                                            <span t-else="" t-esc="res_company.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                                        </div></td>
                                </tr>
                                <tr style="padding:0px;">

                                    <td ><span style="font-weight:bold;">Buyer Details</span>
                                            <address class="mb-0" t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                                            <div t-if="o.partner_id.vat">
                                                <t t-if="o.company_id.account_fiscal_country_id.vat_label" t-esc="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                                                <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/>
                                            </div>
                                    </td>
                                    <td colspan="2" style="padding:0px;">
                                        <table class="table table-bordered" style="border:2px solid black;">
                                            <tr style="border-top:2px solid white">
                                                <td style="border-left:2px solid white;font-weight:bold;">Invoice No</td>
                                                <td ><span t-field="o.name"/></td>
                                                <td style="font-weight:bold;">Date</td>
                                                <td style="border-right:2px solid white;"><span t-field="o.invoice_date"/></td>
                                            </tr>
                                            <tr>
                                                <td style="border-left:2px solid white;font-weight:bold;">DO No</td>
                                                <td></td>
                                                <td style="font-weight:bold;">Date</td>
                                                <td style="border-right:2px solid white;"></td>
                                            </tr>
                                            <tr>
                                                <td style="border-left:2px solid white;font-weight:bold;">LPO No</td>
                                                <td></td>
                                                <td style="font-weight:bold;">Date</td>
                                                <td style="border-right:2px solid white;"></td>
                                            </tr>
                                            <tr>
                                                <td colspan="4" style="font-weight:bold;border-left:2px solid white;border-right:2px solid white;border-bottom:2px solid white;">SALE PERSON CODE and TEL NO: <span t-field="o.invoice_user_id.name"/></td>
                                            </tr>
                                        </table>
                                    </td>

                                </tr>
                                <tr style="padding:0px;">
                                    <td colspan="3" style="padding:0px;">
                                        <table class="table table-bordered" style="border:2px solid black;">
                                            <tr style="border-top:2px solid white;font-weight:bold;">
                                                <td style="border-left:2px solid white;">NO</td>
                                                <td>DESCRIPTION</td>
                                                <td>QTY</td>
                                                <td>RATE</td>
                                                <td>UNIT</td>
                                                <td>VAT</td>
                                                <td style="border-right:2px solid white;">AMOUNT</td>
                                            </tr>
                                            <t t-set="sr" t-value="0"/>
                                            <tr t-foreach="o.invoice_line_ids" t-as="line">
                                                <t t-set="sr" t-value="sr+1"/>
                                                <td style="border-left:2px solid white;"><span t-esc="sr"/></td>
                                                <td><span t-esc="line.name"/></td>
                                                <td><span t-esc="line.quantity"/></td>
                                                <td><span t-esc="line.price_unit"/></td>
                                                <td><span t-esc="line.price_unit"/></td>
                                                <td>
                                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                                </td>
                                                <td style="border-right:2px solid white;"><span t-esc="line.price_subtotal"/></td>
                                            </tr>
                                        </table>
                                        <br/>&#160;
                                    </td>
                                </tr>
                                <tr style="margin-top:-10px;">
                                    <td colspan="2" ><span style="font-weight:bold;">Amount in Words:</span> <span t-esc="o.get_amount_in_word()"/></td>
                                    <td style="padding:0px;">
                                        <div class="row">
                                            <div class="col-6" style="padding:5px;font-weight:bold;">Total Amount</div>
                                            <div class="col-6" style="border-left:1px solid black;padding:5px;"><span t-esc="o.amount_untaxed"/></div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="font-weight:bold;">Payment Terms:</td>
                                    <td style="padding:0px;">
                                        <div class="row">
                                            <div class="col-6" style="padding:5px;font-weight:bold;">VAT Amount</div>
                                            <div class="col-6" style="border-left:1px solid black;padding:5px;"><span t-esc="o.amount_tax"/></div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="font-weight:bold;">Notes:</td>
                                    <td style="padding:0px;">
                                        <div class="row">
                                            <div class="col-6" style="padding:5px;font-weight:bold;">NET Amount</div>
                                            <div class="col-6" style="border-left:1px solid black;padding:5px;"><span t-esc="o.amount_total"/></div>
                                        </div>
                                    </td>
                                </tr>
                                <tr rowspan="3">
                                    <td style="font-weight:bold;">
                                        CUSTOMER'S SEAL AND SIGN<br/><br/><br/><br/>&#160;&#160;
                                    </td>
                                    <td colspan="2" style="font-weight:bold;">
                                        DHOFAR ENVIRONMENTAL SAFETY and SERVICES CO LLC<br/><br/><br/><br/>&#160;&#160;
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <!--                </t>-->
            </t>
        </t>
    </template>

</odoo>